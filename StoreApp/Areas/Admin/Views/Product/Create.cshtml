@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Ürün Ekle Sayfasý</div>
</div>

<form method="post" asp-action="Create" enctype="multipart/form-data" >

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId">Kategori</label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId">
        </select>
    </div>


    <div class="form-group my-3">
        <label asp-for="ProductName">Ürün Adý</label>
        <input asp-for="ProductName" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Summary">Açýklama</label>
        <input asp-for="Summary" class="form-control" />
    </div>

    <div class="form-group my-3">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ImageUrl">Resim</label>
        <input name="file" type="file" class="form-control" />
    </div>

    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-save"></i>
                Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="fa fa-list"></i>
                Ürünler
            </a>
        </div>
    </div>
</form>