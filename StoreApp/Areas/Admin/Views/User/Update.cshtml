@model UserDtoForUpdate

<div class="text-center my-5" >
    <div class="display-6">@Model.UserName Güncelle</div>
</div>

<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group my-3">
                <label asp-for="UserName" class="control-label">Kullanýcý Adý</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="Email" class="control-label">E-Posta</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="PhoneNumber" class="control-label">Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <div class="btn-group d-flex justify-content-end">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fa fa-arrow-left"></i> Geri
                    </a>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <div class="lead mb-3">Roller</div>
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check">
                        <input type="checkbox" name="Roles" value="@item" class="form-check-input" id="role-@item">
                        <label class="form-check-label" for="role-@item">
                            @item
                            <span class="icon-container">
                                <i class="fas fa-user-friends me-1"></i>
                            </span>
                        </label>
                    </div>
                }
            </div>
            <div class="text-muted">
                Lütfen kullanýcý için rolleri seçin.
            </div>
        </div>
    </div>
</form>
