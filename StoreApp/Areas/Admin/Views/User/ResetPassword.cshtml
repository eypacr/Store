@model ResetPasswordDto

<div class="text-center my-5">
    <div class="display-6 border-bottom">(@Model?.UserName) Þifreyi Yenile </div>
</div>

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="ResetPassword">
    <input type="hidden" asp-for="UserName" />
    <div class="form-group my-3">
        <label asp-for="Password">Þifre</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group my-3">
        <label asp-for="ConfirmPassword">Þifreyi Onayla</label>
        <input asp-for="ConfirmPassword" class="form-control" />
    </div>
    <div class="btn-group">
        <button type="submit" class="btn btn-outline-success">
            <i class="fa fa-solid fa-key"></i>
            Güncelle
        </button>
        <a class="btn btn-outline-secondary" asp-action="Index">
            <i class="fa fa-solid fa-users"></i>
            Kullanýcýlar
        </a>
    </div>
</form>