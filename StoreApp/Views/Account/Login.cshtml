@model LoginModel

<div class="text-center my-5">

    <h6 class="display-6">
        <i class="fa-solid text-white fa-right-to-bracket bg-secondary p-3 rounded-5"></i>
        <br />
        Giriþ Yap
    </h6>
</div>

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Login">
            <input type="hidden" asp-for="ReturnUrl" />

            <div class="form-group my-3">
                <label asp-for="Name">Kullanýcý Adý</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group my-3">
                <label asp-for="Password">Þifre</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-right-to-bracket"></i>
                    Giriþ Yap
                </button>
            </div>
        </form>

        <div>
            Hesabýnýz yoksa. Ulaþmak için lütfen buraya týklayýn <a asp-action="Register"> kayýt sayfasý.</a>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>

