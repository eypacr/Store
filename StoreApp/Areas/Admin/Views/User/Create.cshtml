@model UserDtoForCreation

<div class="text-center my-5">
    <div class="display-6">Kullanýcý Oluþtur</div>
</div>

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <div class="form-group mb-3">
                    <label asp-for="UserName" class="form-label">Kullanýcý Adý</label>
                    <input asp-for="UserName" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label">E-Posta</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label">Þifre</label>
                    <input asp-for="Password" class="form-control" />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-info me-2">
                        <i class="fas fa-plus-circle"></i>
                        Oluþtur
                    </button>
                    <a asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-1"></i>
                        Geri
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                <div class="lead mb-3">Roller</div>
                @foreach (var item in Model.Roles)
                {
                    <div class="form-check">
                        <input type="checkbox" name="Roles" value="@item" class="form-check-input" id="role-@item">
                        <label class="form-check-label" for="role-@item">
                            @item
                            <span class="icon-container">
                                <i class="fas fa-user-friends me-1"></i>
                            </span>
                        </label>
                    </div>
                }
            </div>
        </div>
    </div>
</form>
